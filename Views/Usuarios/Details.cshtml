    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cliente)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NumeroContainer)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NumeroContainer)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd>
            @*Html.DisplayFor(model => model.Tipo)*@
            @if (Model.Tipo == "1")
            {
                <label>20</label>
            }
            else
               if (Model.Tipo == "2")
            {
                <label>40</label>
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd>
            @*Html.DisplayFor(model => model.Status)*@
            @if (Model.Status == 1)
            {
                <label>Cheio</label>
            }
            else
               if (Model.Status == 2)
            {
                <label>Vazio</label>
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd>
            @*Html.DisplayFor(model => model.Categoria)*@
            @if (Model.Categoria == "1")
            {
                <label>Importação</label>
            }
            else
               if (Model.Categoria == "2")
            {
                <label>Exportação</label>
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.QtdMovimentos)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.QtdMovimentos)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Movimento)
        </dt>
        <dd>
            @*Html.DisplayFor(model => model.Movimento)*@
            @if (Model.Movimento == "1")
            {
                <label>Embarque</label>
            }
            else
               if (Model.Movimento == "2")
            {
                <label>Descarga</label>
            }
            else
               if (Model.Movimento == "3")
            {
                <label>Gate IN</label>
            }
            else
               if (Model.Movimento == "4")
            {
                <label>Gate OUT</label>
            }
            else
               if (Model.Movimento == "5")
            {
                <label>Posicionamento Pilha</label>
            }
            else
               if (Model.Movimento == "6")
            {
                <label>Pesagem</label>
            }
            else
                if (Model.Movimento == "7")
            {
                <label>Scanner</label>
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Inicio)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Inicio)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Fim)
